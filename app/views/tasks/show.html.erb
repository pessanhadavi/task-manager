<%= link_to "Edit task", edit_task_path(@task) %>
<%= link_to "Delete task", task_path(@task), method: :delete, data: { confirm: "Are you sure?" } %>

<h1><%= @task.title.capitalize %></h1>
<p><%= @task.details.capitalize %></p>
<% @task.completed ? neg = "" : neg = "not" %>
<p>The task is <%= neg %> completed</p>

<%= link_to "Check all tasks", tasks_path %>
